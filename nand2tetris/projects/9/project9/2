class NPC {
    
    field Array npc;
    field String name, role;
    field int inM, npcIndex;

    static int numOfNPCs;
    static int activeNPC;  // Perhaps needs to be tracked through game?
    static int pendingNPC;
    static ChallengeNode challengeNode;
    static ContentNode contentNode;
    
    function void init() {
        let numOfNPCs = 0;
        let activeNPC = 0;
        let challengeNode = ChallengeNode.makeNode0();
        let contentNode = ContentNode.makeBlank();

        return;
    }

    function void interact() {
        
        if (pendingNPC = activeNPC) {
            do challengeNode.draw();
            do contentNode.draw();
            do Dialogue.draw();
            do QuestManager.manageQuest();
        }
        else {
            // default dialogue of this NPC at this point
        }

        return;
    }
    
    method void dispose() {
        do Memory.deAlloc(this);
        return;
    }
    

    method int getStage() {
        return npc[4];
    }

    method void incStage() {
        let npc[4] = npc[4] + 1;  // increment stage by 1
        return;
    }

    function void setPending(int index) {
        let pendingNPC = index;
        return;
    }

    function int getActive() {
        return activeNPC;
    }

    function void setActive(int index) {
        let activeNPC = index;
        // 0 == Shimon
        // 1 == Gini
        // 2 == ...
        return;
    }

    function void makeChallengeNode(int quest) {

        if (quest = 0) {
            let challengeNode = ChallengeNode.makeNode0();
            do Challenge.setSelBuffIndex(13);
            return;
        }

        if (quest = 1) {
            do challengeNode.dispose();
            let challengeNode = ChallengeNode.makeNode1();
            do Challenge.setSelBuffIndex(13);
            return;
        }

        if (quest = 2) {
            do challengeNode.dispose();
            let challengeNode = ChallengeNode.makeNode2();
            do Challenge.setSelBuffIndex(0);
            return;
        }

        if (quest = 3) {
            do challengeNode.dispose();
            let challengeNode = ChallengeNode.makeNode3();
            do Challenge.setSelBuffIndex(0);
            return;
        }

        return;
    }

    function void makeContentNode(int quest) {
        if (quest = 2) {
            let contentNode = ContentNode.makeShimon();
            return;
        }

        return;
    }

    function boolean checkChallengeAnswer(String buff13, String buff14) {
        var boolean ret;
        let ret = challengeNode.checkAnswer(buff13, buff14);
        do Output.moveCursor(0,0);
        if (ret) { do QuestManager.complete(); }
        else { do UserInterface.signalIncorrectAnswer(); }
        return ret;
    }
}
