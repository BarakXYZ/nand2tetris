/**
 * This library provides two services: direct access to the computer's main
 * memory (RAM), and allocation and recycling of memory blocks. The Hack RAM
 * consists of 32,768 words, each holding a 16-bit binary number.
 */ 
class Memory {
    static Array ram;
    static Array heap;
    static int freeList, segDelta;

    /** Initializes the class. */
    function void init() {
        // Set base address of RAM to 0 so we can access at addresses: 0-32767
        let ram = 0;
        let heap = 2048; // Base address of the heap segment
        let freeList = heap;

        // .next: available free space
        let heap[0] = 0;

        // .size: The initial free available size of the heap segment
        let heap[1] = 14335;

        // The 2 additional words each segment should reserve for ptr & size
        let segDelta = 2;
        return;
    }

    /** Returns the RAM value at the given address. */
    function int peek(int address) {
        return ram[address];
    }

    /** Sets the RAM value at the given address to the given value. */
    function void poke(int address, int value) {
        let ram[address] = value;
        return;
    }

    /** Finds an available RAM block of the given size and returns
     *  a reference to its base address. */
    function int alloc(int size) {
        var int nextAddr, freeSize, reqSize, newSegAddr, RemainingSize;

        let reqSize = size + segDelta; // Reserve 2 additional words for the ptr & size

        let freeSize = Memory.peek(freeList + 1);
        let nextAddr = Memory.peek(freeList); // Next address to look at if not enough memory was found
        
        while (true) {
            if (~(freeSize < reqSize)) {
                // Allocate
                let RemainingSize = freeSize - reqSize;
                let newSegAddr = freeList + segDelta + RemainingSize;

                // The new segment should point to this segment as the next address to look at:
                do Memory.poke(newSegAddr, freeList);
                do Memory.poke(newSegAddr + 1, size); // Store size info

                // Update the size of the found segment
                do Memory.poke(freeList + 1, RemainingSize)
                
                // The freeList should point to the new segment:
                let freeList = newSegAddr;

                return newSegAddr;
            }
            if (nextAddr = 0) {
                // A free size was not found; Potentially we can implement deFrag.
                return -1; 
            } else {
                // Traverse to the next address
                let freeSize = Memory.peek(nextAddr + 1);
                let nextAddr = Memory.peek(nextAddr);
            }
        }
    }

    /** De-allocates the given object (cast as an array) by making
     *  it available for future allocations. */
    function void deAlloc(Array o) {
        var int nextAddr;
        let nextAddr = Memory.peek(freeList);

        while (true) {
            // Next address to traverse to
            if (nextAddr = 0) {
                // Append to the end of the linked list
                do Memory.poke(nextAddr, o);
                do Memory.poke(o, 0);
                return;
            } else {
                let nextAddr = Memory.peek(nextAddr);
            }
        }
    }    
}
